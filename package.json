{
  "name": "@vadistic/tsask",
  "version": "0.3.2",
  "private": false,
  "description": "tsask = 'typescript task'",
  "repository": {
    "type": "git",
    "url": "https://github.com/vadistic/tsask"
  },
  "license": "MIT",
  "author": "Jakub Wadas <vadistic@gmail.com>",
  "main": "dist/index.js",
  "bin": {
    "tsask": "bin/cli.js"
  },
  "scripts": {
    "build": "tsc -p ./tsconfig.build.json",
    "clean": "rm -rf dist",
    "dev": "node bin/dev.js",
    "format": "prettier --write src/**/*.ts",
    "lint": "eslint --ext .ts src/**/*",
    "prepublishOnly": "yarn format && yarn lint && yarn clean && yarn build",
    "start": "node bin/cli.js",
    "test": "jest",
    "typecheck": "tsc -p ./tsconfig.json --noEmit"
  },
  "prettier": "@vadistic/prettier-config",
  "dependencies": {
    "case": "^1.6.3",
    "cosmiconfig": "^7.0.0",
    "fs-extra": "^9.0.1",
    "globby": "^11.0.1",
    "open": "^7.3.0",
    "sort-package-json": "^1.46.1",
    "ts-node": "*"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.3",
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.6",
    "@vadistic/eslint-config": "^0.5.0",
    "@vadistic/prettier-config": "^0.5.0",
    "eslint": "^7.13.0",
    "eslint-plugin-prettier": "^3.1.4",
    "jest": "^26.6.3",
    "prettier": "^2.1.2",
    "ts-jest": "^26.4.4",
    "typescript": "^4.0.5"
  },
  "publishConfig": {
    "access": "public"
  }
}
